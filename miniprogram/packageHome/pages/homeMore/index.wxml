<navigation-bar title="{{navTitle}}" back="{{true}}" background="#FFF">
</navigation-bar>

<scroll-view class="homeMoreContainer" scroll-y>
  <block wx:if="{{type !== 'technology'}}">
    <view class="list-item {{type === 'expert' ? 'expert-list-item' : ''}}" wx:for="{{listData}}" wx:key="id" bindtap="navigateToDetail" data-id="{{item.id}}">
      <image lazy-load class="thumbnail" src="{{item.image}}" mode="aspectFill" />
      <view class="content">
        <view class="main-title">{{item.title}}</view>
        <view class="desc">{{item.desc}}</view>
      </view>
    </view>
  </block>

  <!-- 技术专用模板 -->
  <block wx:if="{{type === 'technology'}}">
    <view class="tech-card" wx:for="{{listData}}" wx:key="id">
      <!-- 标题区 -->
      <view class="tech-header">
        <text class="main-title">{{item.title}}</text>
      </view>

      <!-- 核心特点 -->
      <view class="tech-features">
        <view class="feature-item" wx:for="{{item.features}}" wx:key="*this">
          <view class="feature-dot"></view>
          <text class="feature-text">{{item}}</text>
        </view>
      </view>

      <!-- 治疗效果 -->
      <view class="tech-effect">
        <view class="effect-label">核心疗效</view>
        <text class="effect-text">{{item.effect}}</text>
      </view>
    </view>
  </block>
</scroll-view>